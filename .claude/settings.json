{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(python:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(pip:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(pwd:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "WebSearch",
      "mcp__*"
    ]
  },
  "mcpServers": {
    "github": {
      "enabled": true,
      "description": "GitHub integration for PR/issue management and repository operations"
    },
    "brightdata": {
      "enabled": true,
      "description": "Web scraping and lead research capabilities"
    },
    "Ref": {
      "enabled": true,
      "description": "Documentation search and reference lookup"
    }
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "domain-memory-agent@claude-code-plugins": true,
    "git-workflow@claude-code-templates": true,
    "python-development@claude-code-workflows": true,
    "business-analytics@claude-code-workflows": true
  }
}
